@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">User List</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Name-Surname</th>
        <th>Username</th>
        <th>E-Mail</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Comments</th>
        <th>User History</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <th><a href="" class="btn btn-outline-primary">Edit</a></th>
            <th><a href="" class="btn btn-outline-danger">Delete</a></th>
            <th><a href="" class="btn btn-outline-success">Comments</a></th>
            <th><a href="/Admin/User/UserReservation/@item.Id" class="btn btn-outline-info">History</a></th>
        </tr>
    }
</table>
<br />
<a class="btn btn-outline-warning" href="/Login/SignUp/">New User</a>