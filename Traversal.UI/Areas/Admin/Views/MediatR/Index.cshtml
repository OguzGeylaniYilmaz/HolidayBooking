@model List<GetGuidesQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="color:darkviolet;text-align:center">Guide List</h2>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/Admin/MediatR/GetGuide/@item.GuideID" class="btn btn-outline-info">Edit</a></td>
            <td><a href="#" class="btn btn-outline-danger">Delete</a></td>         
        </tr>
    }
</table>
<br />
<a href="/Admin/MediatR/AddGuide/" class="btn btn-outline-success">New Guide</a>