@model VisitorViewModel
@{
    ViewData["Title"] = "EditVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Update Visitor</h2>
<br />
<form method="post">
    <input type="hidden" asp-for="VisitorID"/>
    <label>Name</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Surname</label>
    <input type="text" class="form-control" asp-for="Surname" />
    <br />
    <label>City</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Country</label>
    <input type="text" class="form-control" asp-for="Country" />
    <br />
    <label>Mail</label>
    <input type="email" class="form-control" asp-for="Mail" />
    <br />
    <button class="btn btn-primary">Save</button>
</form>


