@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Visitor List</h1>
<br />
<table class="table table-border">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname </th>
        <th>City</th>
        <th>Country</th>
        <th>E-Mail</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.VisitorID</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/Visitor/EditVisitor/@item.VisitorID/" class="btn btn-outline-info">Edit</a></td>
            <td><a href="/Admin/Visitor/DeleteVisitor/@item.VisitorID/" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>
<br />

<a href="/Admin/Visitor/AddVisitor/" class="btn btn-success">New Visitor</a>