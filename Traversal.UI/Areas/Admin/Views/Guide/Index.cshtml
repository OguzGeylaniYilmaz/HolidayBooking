@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Guide List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GuideID</th>
            <td><img src="@item.Image" height="75" width="75" class="rounded-circle" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @if (@item.Status==true)
                {
                    <span style="color:green">@item.Status</span>
                }
                else
                {
                    <span style="color:red">@item.Status</span>
                }
               
            </td>
            <td><a href="/Admin/Guide/EditGuide/@item.GuideID/" class="btn btn-outline-info">Edit</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/Guide/AddGuide/"class="btn btn-outline-success">New Guide</a>