@model List<AnnouncementListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Edit</th>
        <th>Delete</th>     
        <th>Details</th>

    </tr>
  
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AnnouncementID</th>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-success">Edit</a></td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/Announcement/Details/@item.AnnouncementID" class="btn btn-info">Detail</a></td>
        </tr>
    }
</table>

<br />
<a href="/Admin/Announcement/AddAnnouncement" class="btn btn-warning">New Announcement</a>