@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
}
<h1 style="text-align:center">Role List</h1>
@if (Model.Count > 0)
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Role Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/EditRole/@item.Id" class="btn btn-info">Edit</a></td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Delete</a></td>

            </tr>
        }
    </table>
}
else
{
    <tr class="alert alert-success">
        <td>No role has found</td>
    </tr>
}

<br />
<a href="/Admin/Role/CreateRole/" class="btn btn-warning">New Role</a>


