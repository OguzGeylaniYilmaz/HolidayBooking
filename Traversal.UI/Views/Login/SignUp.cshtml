@model UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v10 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Register/fonts/linearicons/style.css">>
    <link rel="stylesheet" href="~/Register/css/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <img src="~/Register/images/image-1.png" alt="" class="image-1">
            <form method="post" asp-controller="Login" asp-action="SignUp">
                <h3>New Account?</h3>
                <div class="form-holder">
                    <span class="lnr lnr-user"></span>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" style="color:red" class="text-danger"></span>
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-user"></span>
                    <input type="text" asp-for="Surname" class="form-control" placeholder="Surname">
                    <span asp-validation-for="Surname" style="color:red" class="text-danger"></span>
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-phone-handset"></span>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Username">
                    <span asp-validation-for="Username" style="color:red" class="text-danger"></span>
                </div>

                <div class="form-holder">
                    <span class="lnr lnr-envelope"></span>
                    <input type="text" asp-for="Mail" class="form-control" placeholder="Mail">
                    <span asp-validation-for="Mail" style="color:red" class="text-danger"></span>
                </div>

                <div class="form-holder">
                    <span class="lnr lnr-lock"></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" style="color:red" class="text-danger"></span>
                </div>
                <div class="form-holder">
                    <span class="lnr lnr-lock"></span>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" style="color:red" class="text-danger"></span>
                </div>
                <button>
                    <span>Register</span>
                </button>
            </form>
            <img src="~/Register/images/image-2.png" alt="" class="image-2">
        </div>

    </div>

    <script src="~/Register/js/jquery-3.3.1.min.js"></script>
    <script src="~/Register/js/main.js"></script>
</body>
</html>
